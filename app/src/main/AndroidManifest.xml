<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.telematics.zenroad">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.telematics.zenroad.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.ZenroadAppBundle">
        <activity
            android:theme="@style/SplashScreenTheme"
            android:name="com.telematics.zenroad.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.telematics.zenroad.MainActivity" />
        <activity android:name="com.telematics.zenroad.ui.login.LoginActivity" />
    </application>

</manifest>