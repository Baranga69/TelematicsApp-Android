<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/on_demand_view_accepted_name"
        android:fontFamily="@font/open_sans_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:text="02/16 11:06AM"
        android:textColor="@color/elm_connected_text_color"
        android:textSize="16sp" />

    <Button
        android:id="@+id/on_demand_view_accepted_decline"
        style="@style/Button"
        android:fontFamily="@font/open_sans_bold"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_rectangle_red"
        android:text="@string/decline"
        android:textColor="#E35959"
        android:textSize="16sp" />

    <Button
        android:id="@+id/on_demand_view_accepted_start"
        style="@style/Button"
        android:fontFamily="@font/open_sans_bold"
        android:layout_width="wrap_content"
        android:stateListAnimator="@null"
        android:text="@string/start"
        android:textSize="16sp" />

</LinearLayout>